<header role="banner">
  <span class="app-nav-auth">
    <% if current_user %>
        <%= link_to current_user.display_name, user_path(current_user) %>
    <% else %>
        <%= link_to t('devise.shared.links.sign_in'), new_user_session_path %>
    <% end %>
  </span>
  <a class="app-nav-logo" href="/"><%= t 'brand.name' %></a>
</header>
